<h2>Contact me</h2>

{{#if isSent}}
  <p class="isSent">The message has been sent. File {{ filename }} has been saved</p>
{{/if}}

{{#if isError}}
  <p class="isError">You can't leave fields empty</p>
{{/if}}

{{! default enctype is application/x-www-form-urlencoded, we need to apply form-data because of image --}}
<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: <input type="file" name="image" accept=" image/png, image/jpeg, image/jpg, image/gif" required>
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>